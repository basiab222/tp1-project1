public class UCMShip {
    private int column;
    private int row;
    private int resistance;

    // Constructor
    public UCMShip(int initialColumn, int initialRow) {
        this.column = initialColumn;
        this.row = initialRow;
        this.resistance = 3;
    }

    // Getter 
    public int getColumn() {
        return column;
    }

    public int getRow() {
        return row;
    }

    // Other methods (add more)

    public void moveHorizontally(int amount) {
        // Implement horizontal movement logic
    }

    public void fireLaser() {
        // Implement logic to fire a laser
    }

    public int getResistance() {
        return resistance;
    }
    
    // Other methods specific to UCMShip
}


